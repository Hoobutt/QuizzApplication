<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400" prefWidth="600" style="-fx-background-color: #FFA88F;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quizzapplication.miscControllers.RegisterController">
    <children>
        <Button fx:id="registerButton" alignment="CENTER" contentDisplay="CENTER" layoutX="270.0" layoutY="332.0" mnemonicParsing="false" onAction="#onRegisterButtonClick" text="Register" />
        <Label layoutX="158.0" layoutY="22.0" text="New User Sign Up">
            <font>
                <Font size="36.0" />
            </font>
        </Label>
        <TextField fx:id="usernameField" layoutX="221.0" layoutY="104.0" promptText="Username" />
        <Button fx:id="backButton" contentDisplay="CENTER" layoutX="521.0" layoutY="359.0" mnemonicParsing="false" onAction="#onBackButtonClick" prefHeight="27.0" prefWidth="65.0" style="-fx-background-color: #E67E73; -fx-text-fill: white;" text="Back" />
        <TextField fx:id="emailField" layoutX="221.0" layoutY="139.0" promptText="Email" />
        <CheckBox fx:id="adminCheckBox" layoutX="236.0" layoutY="240.0" mnemonicParsing="false" text="Register as Admin" />
        <TextField fx:id="adminCodeField" layoutX="221.0" layoutY="270.0" promptText="Admin Code" visible="false" />
        <PasswordField fx:id="passwordField" layoutX="221.0" layoutY="173.0" promptText="Password" />
        <PasswordField fx:id="confirmPasswordField" layoutX="221.0" layoutY="207.0" promptText="Re-enter Password" />
    </children>
</AnchorPane>
