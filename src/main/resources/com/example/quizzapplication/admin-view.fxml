<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" prefHeight="860.0" prefWidth="1559.0" style="-fx-background-color: #FFA88F;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quizzapplication.miscControllers.AdminController">
    <TabPane tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <tabs>
            <!-- User Tab -->
            <Tab text="Manage Users">
                <content>
                    <AnchorPane>
                        <VBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
                            <children>
                                <Label style="-fx-font-size: 32; -fx-alignment: center;" text="User List">
                                    <VBox.margin>
                                        <Insets bottom="10" />
                                    </VBox.margin>
                                </Label>

                                <Label style="-fx-font-size: 14; -fx-text-fill: #666;" text="View all registered users and their roles">
                                    <VBox.margin>
                                        <Insets bottom="10" />
                                    </VBox.margin>
                                </Label>

                                <TableView fx:id="userTableView" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="userNameColumn" prefWidth="200" text="Username" />
                                        <TableColumn fx:id="userEmailColumn" prefWidth="250" text="Email" />
                                        <TableColumn fx:id="userRoleColumn" prefWidth="150" text="Role" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                                <HBox alignment="CENTER">
                                    <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackButtonClick" style="-fx-background-color: #E67E73; -fx-text-fill: white;" text="Return to Home" />
                                    <Separator prefWidth="200.0" visible="false" />
                                    <Button fx:id="quizHomePageButton" mnemonicParsing="false" onAction="#quizHomePageButtonClick" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Quiz Home Page" />
                                </HBox>
                            </children>
                        </VBox>
                    </AnchorPane>
                </content>
            </Tab>

            <!-- Manage Quizzes Tab -->
            <Tab text="Manage Quizzes">
                <content>
                    <AnchorPane>
                        <VBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
                            <children>
                                <Label style="-fx-font-size: 32; -fx-alignment: center;" text="Manage Quizzes">
                                    <VBox.margin>
                                        <Insets bottom="10" />
                                    </VBox.margin>
                                </Label>

                                <HBox alignment="CENTER" spacing="10">
                                    <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                                            onAction="#onCreateQuizClick" style="-fx-background-color: #56D158;"
                                            text="Create Quiz" textFill="WHITE" />
                                    <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                                            onAction="#onEditQuizClick" style="-fx-background-color: #7353DB;"
                                            text="Edit Quiz" textFill="WHITE" />
                                    <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                                            onAction="#onDeleteQuizClick" style="-fx-background-color: #DB6353;"
                                            text="Delete Quiz" textFill="WHITE" />
                                </HBox>

                                <TableView fx:id="quizTableView" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="quizTitleColumn" prefWidth="200" text="Quiz Title" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>

                                <HBox alignment="CENTER">
                                    <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackButtonClick" style="-fx-background-color: #E67E73; -fx-text-fill: white;" text="Return to Home" />
                                    <Separator prefWidth="200.0" visible="false" />
                                    <Button fx:id="quizHomePageButton" mnemonicParsing="false" onAction="#quizHomePageButtonClick" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Quiz Home Page" />
                                </HBox>
                            </children>
                        </VBox>
                    </AnchorPane>
                </content>
            </Tab>

            <!-- Question Management Tab -->
            <Tab text="Question Management">
                <content>
                    <AnchorPane>
                        <children>
                            <HBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
                                <children>
                                    <!-- Left side - Quiz List -->
                                    <VBox spacing="10" prefWidth="300">
                                        <children>
                                            <Label style="-fx-font-size: 24; -fx-alignment: center;" text="Select Quiz" />
                                            <TableView fx:id="questionQuizTableView" VBox.vgrow="ALWAYS" />
                                        </children>
                                    </VBox>

                                    <!-- Right side - Questions -->
                                    <VBox spacing="10" HBox.hgrow="ALWAYS">
                                        <children>
                                            <Label style="-fx-font-size: 24; -fx-alignment: center;" text="Questions" />
                                            <HBox alignment="CENTER" spacing="10">
                                                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                                                        onAction="#onAddQuestionClick" style="-fx-background-color: #56D158;"
                                                        text="Add Question" textFill="WHITE" />
                                                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                                                        onAction="#onEditQuestionClick" style="-fx-background-color: #7353DB;"
                                                        text="Edit Question" textFill="WHITE" />
                                                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                                                        onAction="#onDeleteQuestionClick" style="-fx-background-color: #DB6353;"
                                                        text="Delete Question" textFill="WHITE" />
                                            </HBox>
                                            <TableView fx:id="questionTableView" VBox.vgrow="ALWAYS">
                                                <columns>
                                                    <TableColumn fx:id="questionTextColumn" prefWidth="300" text="Question Text" />
                                                    <TableColumn fx:id="correctAnswerColumn" prefWidth="100" text="Correct Answer" />
                                                </columns>
                                            </TableView>
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>
                            <!-- Navigation buttons -->
                            <HBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
                                <children>
                                    <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackButtonClick"
                                            style="-fx-background-color: #E67E73; -fx-text-fill: white;" text="Return to Home" />
                                    <Separator prefWidth="200.0" visible="false" />
                                    <Button fx:id="quizHomePageButton" mnemonicParsing="false" onAction="#quizHomePageButtonClick"
                                            style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Quiz Home Page" />
                                </children>
                            </HBox>
                        </children>
                    </AnchorPane>
                </content>
            </Tab>

            <!-- Results Tab -->
            <Tab text="Results">
                <content>
                    <AnchorPane>
                        <children>
                            <HBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
                                <children>
                                    <!-- Left side - Quiz List -->
                                    <VBox spacing="10" prefWidth="300">
                                        <children>
                                            <Label style="-fx-font-size: 24; -fx-alignment: center;" text="Select Quiz" />
                                            <TableView fx:id="resultsQuizTableView" VBox.vgrow="ALWAYS" />
                                        </children>
                                    </VBox>

                                    <!-- Right side - Results -->
                                    <VBox spacing="10" HBox.hgrow="ALWAYS">
                                        <children>
                                            <Label style="-fx-font-size: 24; -fx-alignment: center;" text="Results" />
                                            <TableView fx:id="resultsTableView" VBox.vgrow="ALWAYS">
                                                <columns>
                                                    <TableColumn fx:id="resultUserColumn" prefWidth="150" text="User" />
                                                    <TableColumn fx:id="resultScoreColumn" prefWidth="100" text="Score" />
                                                    <TableColumn fx:id="resultPercentageColumn" prefWidth="100" text="Percentage" />
                                                    <TableColumn fx:id="resultTimeColumn" prefWidth="120" text="Time Used" />
                                                </columns>
                                                <columnResizePolicy>
                                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                </columnResizePolicy>
                                            </TableView>
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>
                            <!-- Navigation buttons -->
                            <HBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
                                <children>
                                    <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackButtonClick"
                                            style="-fx-background-color: #E67E73; -fx-text-fill: white;" text="Return to Home" />
                                    <Separator prefWidth="200.0" visible="false" />
                                    <Button fx:id="quizHomePageButton" mnemonicParsing="false" onAction="#quizHomePageButtonClick"
                                            style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Quiz Home Page" />
                                </children>
                            </HBox>
                        </children>
                    </AnchorPane>
                </content>
            </Tab>
        </tabs>
    </TabPane>
</AnchorPane>