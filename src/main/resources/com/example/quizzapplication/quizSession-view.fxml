<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="815.0" prefWidth="1198.0" style="-fx-background-color: #FFA88F;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quizzapplication.miscControllers.QuizSessionController">
    <children>
        <VBox spacing="20" style="-fx-padding: 20;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <children>
                <!-- Header -->
                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackButtonClick" text="Back" />
                        <Label fx:id="quizTitleLabel" text="Quiz Title" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label fx:id="timerLabel" text="150:00" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <!-- Progress Section -->
                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <Label fx:id="questionNumberLabel" text="Question 1 of 10" textFill="WHITE" />
                        <ProgressBar fx:id="progressBar" prefWidth="300" progress="0.0" />
                    </children>
                </HBox>

                <!-- Question -->
                <VBox spacing="10" alignment="CENTER">
                    <children>
                        <Text fx:id="questionText" strokeType="OUTSIDE" strokeWidth="0.0" text="Question will appear here" textAlignment="CENTER" wrappingWidth="1000">
                            <font>
                                <Font size="20.0" />
                            </font>
                        </Text>
                    </children>
                </VBox>

                <!-- Answers -->
                <VBox spacing="15" alignment="CENTER_LEFT">
                    <children>
                        <RadioButton fx:id="answer1" mnemonicParsing="false" text="Option A" style="-fx-font-size: 16; -fx-text-fill: white;" />
                        <RadioButton fx:id="answer2" mnemonicParsing="false" text="Option B" style="-fx-font-size: 16; -fx-text-fill: white;" />
                        <RadioButton fx:id="answer3" mnemonicParsing="false" text="Option C" style="-fx-font-size: 16; -fx-text-fill: white;" />
                        <RadioButton fx:id="answer4" mnemonicParsing="false" text="Option D" style="-fx-font-size: 16; -fx-text-fill: white;" />
                    </children>
                </VBox>

                <!-- Navigation Buttons -->
                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <Button fx:id="previousButton" mnemonicParsing="false" onAction="#onPreviousButtonClick" text="Previous"
                                style="-fx-background-color: #E67E73; -fx-text-fill: white; -fx-font-weight: bold;"
                                prefWidth="120" prefHeight="40" />
                        <Button fx:id="nextButton" mnemonicParsing="false" onAction="#onNextButtonClick" text="Next Question"
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"
                                prefWidth="150" prefHeight="40" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>