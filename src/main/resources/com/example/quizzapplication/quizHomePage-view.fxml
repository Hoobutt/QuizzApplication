<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="873.0" prefWidth="1361.0" style="-fx-background-color: #FFA88F;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quizzapplication.miscControllers.QuizHomePageController">
    <children>
        <VBox spacing="20" style="-fx-padding: 20;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <Label style="-fx-alignment: center;" text="Available Quizzes" textFill="white">
                <font>
                    <Font name="System Bold" size="28.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="10" />
                </VBox.margin>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <TextField fx:id="searchField" prefHeight="35.0" prefWidth="300.0" promptText="Search quizzes..." HBox.hgrow="ALWAYS" />
                <Button fx:id="searchButton" onAction="#onSearchButtonClick" prefHeight="35.0" prefWidth="80.0" text="Search" />
            </HBox>
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <Label style="-fx-font-weight: bold;" text="Select a quiz to take:" textFill="white" />
                <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" minHeight="200" style="-fx-background-color: transparent; -fx-border-color: #E67E73; -fx-border-width: 2px;" VBox.vgrow="ALWAYS">
                    <content>
                        <ListView fx:id="quizListView" style="-fx-background-color: white; -fx-border-color: transparent;" VBox.vgrow="ALWAYS" />
                    </content>
                </ScrollPane>
            </VBox>
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button fx:id="enterQuizButton" onAction="#onEnterQuizButtonClick" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Take Selected Quiz" />
                <Button fx:id="backButton" onAction="#onBackButtonClick" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #E67E73; -fx-text-fill: white;" text="Logout" />
            <Button mnemonicParsing="false" prefHeight="40.0" style="-fx-background-color: orange; -fx-text-fill: White;" text="Admin Panel" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
